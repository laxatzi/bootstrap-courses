    <div class="container mt-3">
        <h2>Popover example</h2>
        <a href="#" data-toggle="popover" data-placement="top" title="Header" data-content="This is some content">Top</a>
        <a href="#" data-toggle="popover" data-placement="bottom" title="Header" data-content="Some txt">Bottom</a>
        <a href="#" data-toggle="popover" data-placement="left" title="Header" data-content="Some text">Left</a>
        <a href="#" data-toggle="popover" data-placement="right" title="Header" data-content="Some text">Right</a>
    </div>
    </div>

    <!-- script -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script>
         $(document).ready(function() {
             $('[data-toggle="popover"]').popover();
         });
    </script>
