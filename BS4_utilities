<!-- 4:3 aspect ratio -->
     <div class="embed-responsive embed-responsive-4by3">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/tgbNymZ7vqY" ></iframe>
     </div>
    <br>
 <!-- 16:9 aspect ratio -->
    <div class="embed-responsive embed-responsive-16by9">
